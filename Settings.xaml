<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockTracker.Settings"
             Title="Settings">

    <Grid RowDefinitions="*, *, *, *, *"
              ColumnDefinitions="*, *" 
              Padding="10" >

        <Label Text="Notifications:"
                Grid.Row="0"
                Grid.Column="0"
                FontSize="16"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center" />

        <Button Text="On"
                Clicked="Notification_Toggle"
                VerticalOptions="Center"
                Grid.Row="0"
                Grid.Column="1"
                Margin="10" />

        <Label Text="Percent Change:"
                Grid.Row="1"
                Grid.Column="0"
                FontSize="16"
                HorizontalTextAlignment="Center" 
                VerticalTextAlignment="Center" />

        <Button Text="5%"
                Clicked="Stock_Change_Notification_Setting"
                VerticalOptions="Center"
                Grid.Row="1"
                Grid.Column="1" 
                Margin="10" />

        <Label Text="Notify Type:"
               Grid.Row="2"
               Grid.Column="0"
               FontSize="16"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center" />

        <Button Text="T.O.D."
                Clicked="Notify_Type_Change"
                VerticalOptions="Center"
                Grid.Row="2"
                Grid.Column="1"
                Margin="10" />

        <Label Text="Time of Day 1:"
               Grid.Row="3"
               Grid.Column="0"
               FontSize="16"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center" />

        <Button Text="10 am CST"
                Clicked="Time_Of_Day_Change"
                VerticalOptions="Center"
                Grid.Row="3"
                Grid.Column="1"
                Margin="10" />

        <Label Text="Time of Day 2:"
               Grid.Row="4"
               Grid.Column="0"
               FontSize="16"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center" />

        <Button Text="2 pm CST"
                Clicked="Time_Of_Day_Change"
                VerticalOptions="Center"
                Grid.Row="4"
                Grid.Column="1"
                Margin="10" />
    </Grid>
</ContentPage>