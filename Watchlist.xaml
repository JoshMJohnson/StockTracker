<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockTracker.Watchlist"
             Title="Watchlist">
               
    <Grid ColumnDefinitions="*, *" 
          RowDefinitions="*, Auto" >
        
        <CollectionView Grid.ColumnSpan="2">
            
        </CollectionView>

        <Button Text="Add"
                Clicked="Add_Stock"
                Grid.Row="1"
                Grid.Column="0"
                Margin="8"/>

        <Button Text="Remove"
                Clicked="Remove_Stock"
                Grid.Row="1"
                Grid.Column="1"
                Margin="8"/>
    </Grid>
</ContentPage>