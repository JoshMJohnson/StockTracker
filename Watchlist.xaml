<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockTracker.Watchlist"
             Title="Watchlist">
               
    <Grid ColumnDefinitions="*, *" 
          RowDefinitions="*, Auto" 
          BackgroundColor="Transparent" >
        
        <CollectionView Grid.ColumnSpan="2"
                        Grid.Row="0"
                        Grid.Column="0"
                        VerticalOptions="Center"
                        HorizontalOptions="Center" >
            
            <CollectionView.EmptyView>
                <VerticalStackLayout>
                    <Label Text="No stocks in watchlist"
                           FontSize="Subtitle"
                           FontAttributes="Italic"
                           HorizontalOptions="Center" />

                    <Image Source="empty_watchlist.png"
                           SemanticProperties.Description="Your watchlist is empty!"
                           HeightRequest="200" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>
                        
        </CollectionView>

        <Button Text="Add"
                Clicked="Add_Stock"
                Grid.Row="1"
                Grid.Column="0"
                Margin="8"/>

        <Button Text="Remove"
                Clicked="Remove_Stock"
                Grid.Row="1"
                Grid.Column="1"
                Margin="8"/>
    </Grid>
</ContentPage>