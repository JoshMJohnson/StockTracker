<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockTracker.Watchlist"
             Title="Watchlist">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            
            <Grid ColumnDefinitions="1*, 1*" RowDefinitions="1*, Auto">
                <Button Text="Add"
                        Clicked="Add_Stock"
                        HorizontalOptions="Center"
                        Grid.Row="0"
                        Grid.Column="0"/>

                <Button Text="Remove"
                        Clicked="Remove_Stock"
                        Grid.Row="0"
                        Grid.Column="1" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>