<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockTracker.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="{AppThemeBinding Light=linear_chart_light.png, Dark=linear_chart_dark.png}"
                SemanticProperties.Description="chart jumping up and down!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Stock Tracker!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Button Text="Settings"
                    Clicked="Settings_Clicked"
                    HorizontalOptions="Center" />

            <Button Text="Add Stock"
                    Clicked="Add_Stock_Clicked"
                    HorizontalOptions="Center" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
